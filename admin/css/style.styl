// Variables
fuente = 16px
dorado = gold
carmesi = rgb(220,20,40)
blanco = snow
// Mixins
box-sizing()
	box-sizing border-box
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
transition()
	transition all arguments
	-moz-transition all arguments
	-webkit-transition all arguments
// Fuentes
@font-face
	font-family Oswald
	font-style normal
	font-weight 400
	src local('Oswald Regular'), local('Oswald-Regular'), url("http://themes.googleusercontent.com/static/fonts/oswald/v7/-g5pDUSRgvxvOl5u-a_WHw.woff") format('woff')
// Estilos
*
	vertical-align top
a
	color red
	text-decoration none
	&:hover
		text-decoration underline
body
	background carmesi
	color black
	font fuente Helvetica, Arial, sans-serif
	margin 0 auto
	max-width 1000px
footer
	background blanco
	border-top fuente*.25 solid carmesi
	box-sizing 0
	padding fuente*.5
	text-align center
	width 100%
h1
	font-size fuente*2
	margin 0
	padding 0
	text-align center
h1, h2, h3
	font-family 'Oswald', sans-serif
header
	background blanco
	box-sizing 0
	padding .25em
	width 100%
img
	max-width 100%
nav
	background blanco
	width 100%
	ul
		box-sizing 0
		font-size 0
		list-style none
		margin 0
		padding 0
		text-align center
		width 100%
		li
			display inline-block
			font-size fuente
			width 25%
			a
				display block
				padding 5px 25px
				text-align center
				transition (.25s)
				&:hover
					background carmesi
					color dorado
					text-decoration none
section
	background blanco
	width 100%
	h2
		border fuente*.25 solid carmesi
		border-left none
		border-right none
		font-size fuente*1.5
		margin 0
		padding fuente*.5
		text-align center
#agregar {
	background carmesi
	color dorado
	border-radius 0 0 0 fuente
	font-size fuente
	padding fuente*.5
	position absolute
	right 0
	top 0
}
#cpanel
	box-sizing 0
	font-size 0
	aside
		display inline-block
		font-size fuente
		width 250px
		ul
			list-style none
			margin 0
			padding 0
			li
				border-right 3px solid carmesi
				border-bottom 1px solid carmesi
				&:last-of-type
					border-radius 0 0 fuente 0
					border-bottom 3px solid carmesi
				a
					display block
					padding fuente*.25
	section
		box-sizing 0
		display inline-block
		font-size 0
		position relative
		width 750px
		h3
			font-size fuente*1.25
			margin 0
			padding fuente*.5
			text-align center
		form 
			font-size fuente
			padding fuente*.75
			input 
				display block
				width 100%
				&#enviar 
					background carmesi
					border 2px solid dorado
					box-shadow 0 5px 0 dorado
					box-sizing 0
					color #fff
					margin fuente*.5 auto
					padding fuente*.5
					width 50%
					&:active
						box-shadow none
						margin-top 10px
			label 
				display block
			select 
				width 100%
		p
			font-size fuente
			margin 0
			padding fuente*.5
#mensaje 
	background carmesi
	border 1px solid carmesi
	box-sizing border-box
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	color #fff
	display inline-block
	font-size fuente
	margin 5px
	padding fuente
	position relative
	text-align center
	width 99%
	a 
		color dorado
		font-size fuente*1.5
		margin 0
		padding 0
	h3 
		font-size fuente*2
		margin 0
		padding fuente*.5
#riasimagen
	bottom 0
	position fixed
	right 0
.capitulo
	background carmesi
	border 1px solid carmesi
	color #fff
	display inline-block
	font-size fuente
	margin fuente*.25 fuente*.5
	width 734px
	&.activo
		div
			display block
		.nombre
			display none
	div
		display none
		position relative
		a
			border 2px solid dorado
			box-sizing 0
			box-shadow 0 5px 0 dorado
			color #fff
			left 183.5*2+fuente*.25
			padding fuente*.5
			position absolute
			text-align center
			top 51.609375px
			width 91.75px
			&:active
				box-shadow none
				margin-top 10px
		form
			padding 0
			.borrar
				background carmesi
				border 2px solid dorado
				box-shadow 0 5px 0 dorado
				box-sizing 0
				color #fff
				padding fuente*.5
				position absolute
				right fuente*.25
				top 51.609375px
				width 91.75px !important
				&:active
					box-shadow none
					margin-top 10px
		h4
			box-sizing 0
			font-size fuente
			height 42px
			left 183.5*2+fuente*.25
			margin 0
			position absolute
			right fuente*.5
			top fuente*.25
		img
			float left
			height 103.21875px
			width 183.5px
		span
			background carmesi
			border-radius 0 fuente*.5 fuente*.5 0
			color dorado
			display block
			font-size 20px
			left 0
			padding fuente*.25
			position absolute
			top fuente*.5
	.nombre
		box-sizing 0
		display inline-block
		font-size fuente
		margin 0
		padding fuente*.25 fuente*.5
	&#error
		box-sizing 0
		padding fuente
		text-align center
		width 99%
		h3 
			font-size fuente*2
.entrada 
		display inline-block
		font-size fuente
		margin .5%
		position relative
		width 99%
		a 
			background carmesi
			bottom 0
			color dorado
			font-size fuente*.75
			padding 5px
			position absolute
			right 0
		div 
			color carmesi
			font-size fuente*.75
			margin 0
			padding 5px 10px
		form 
			bottom 29px
			padding 0 !important
			position absolute
			right 0
			input 
				background carmesi
				border none
				color dorado
				font-size fuente*.75
				padding 5px
		h4 
			border-bottom 1px solid carmesi
			font-size 20px
			margin 0
			padding 5px
	p 
		margin 0
		padding 5px
		text-align justify
.menu, .pagina
	border-bottom 1px solid carmesi
	font-size fuente
	padding 5px
	a 
		display inline-block
		float right
		&:hover 
			text-decoration underline
	form 
		display inline-block
		float right
		padding 0 !important
		input 
			background blanco
			border none
			color carmesi
	span
		a 
			float none
.proyecto 
	display inline-block
	font-size fuente
	margin .5%
	position relative
	width 49%
	h4
		background carmesi
		color dorado
		font-family 'Oswald'
		font-size fuente*1.25
		left 0
		margin 0
		padding 2.5px
		position absolute
		right 0
		text-align center
		top 0
	img 
		width 100%
		z-index 1
	form 
		bottom 37px
		margin 0
		padding 0 !important
		position absolute
		right 5px
	.borrar 
		background carmesi
		border none
		color dorado
		display inline-block
		font-size fuente
		margin 0
		padding fuente*.25
		text-align center
	span 
		background carmesi
		color dorado
		font-size fuente
		padding fuente*.25
		position absolute
		&.capitulos 
			bottom 5px
			left 5px
		&.estado 
			bottom 37px
			left 5px
	.modificar 
		background carmesi
		bottom 5px
		border none
		color dorado
		display inline-block
		font-size fuente
		margin 0
		padding fuente*.25
		position absolute
		right 5px
		text-align center
// ScrollBar NochesDeCode.com.ar
::-webkit-scrollbar
	width fuente*.5
::-webkit-scrollbar-track
	-webkit-box-shadow dorado
	-webkit-border-radius 0
	border-radius 0
::-webkit-scrollbar-track-piece
	background-color carmesi
::-webkit-scrollbar-thumb
	-webkit-border-radius 0
	border-radius 0
	background dorado
	-webkit-box-shadow inset 0 0 6px blanco
::-webkit-scrollbar-thumb:window-inactive
	background dorado